{%- comment -%} Renderiza blocos via metafields hana.* {%- endcomment -%}

{% assign blocks = 
  "benefits:Benefícios,how_to_use:Modo de usar,storage:Armazenagem,specs:Especificações"
  | split: "," %}

{% for b in blocks %}
  {% assign p = b | split: ":" %}
  {% assign key = p[0] %}
  {% assign title = p[1] %}
  {% assign content = product.metafields.hana[key] %}

  {% if content != blank %}
    <section aria-labelledby="{{ key }}-h2">
      <h2 id="{{ key }}-h2">{{ title }}</h2>
      {{ content | metafield_tag }}
    </section>
  {% endif %}
{% endfor %}

{% if product.metafields.hana.json_ld %}
  <script type="application/ld+json">
    {{ product.metafields.hana.json_ld }}
  </script>
{% endif %}